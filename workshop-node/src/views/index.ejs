<main>
  <h1>Tareas</h1>

  <h2>Crear Tarea</h2>

  <form action="/" method="post">
    <div>
      <label for="title">Nombre: </label>
      <input type="text" name="title" id="title" />
    </div>
    <button type="submit">Enviar</button>
  </form>

  <h2>Listado de tareas</h2>

  <ul>
    <% tareas.forEach(tarea => { %> 
      <%- include('partials/item', { tarea }) %>
    <% }) %>
  </ul>
</main>
